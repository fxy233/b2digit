                    @{
                        foreach (var s in db.Subsidiaries.ToList())
                        {
                            string id = s.Name + "Adresse";
                            <option value="@s.Address" id="@id"></option>
                        };
                    }
                </datalist>

            </div>
            <div class="col-md-8">
