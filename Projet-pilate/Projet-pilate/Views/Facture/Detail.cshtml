        </div>
        <div class="col-md-12">
            <input type="text" value="@ViewBag.MailEmettrice" readonly="readonly" placeholder="Mail de la société" list="mailEmettrice" class="form-control" id="MailEmettrice" asp-for="MailEmettrice" name="MailEmettrice" required />
        </div>
