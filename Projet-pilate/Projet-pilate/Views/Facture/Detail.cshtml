        </div>
        <div class="col-md-8">
            <input type="text" value="@ViewBag.ClientAdresse" readonly="readonly" placeholder="Adresse" list="clientAdresse" class="form-control" id="ClientAdresse" asp-for="ClientAdresse" name="ClientAdresse" required />
        </div>
