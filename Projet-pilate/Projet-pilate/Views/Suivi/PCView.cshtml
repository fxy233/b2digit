
@{
    ViewBag.Title = "PCView";
    Layout = null;
}

    <ul class="nav nav-tabs">
        @{
            var str = "#FAE" + ViewBag.id;
            var str2 = "#Facture" + ViewBag.id;
            var str3 = "#Produit" + ViewBag.id;
            var str4 = "#rapport" + ViewBag.id;
            <li class="active"><a data-toggle="tab" href=@str3>Produit</a></li>

            <li><a data-toggle="tab" href=@str2>Facturé</a></li>
